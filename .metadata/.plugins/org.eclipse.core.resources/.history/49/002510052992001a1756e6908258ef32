package practice_Problems;

import java.util.Scanner;
import java.util.*;

public class PracticeGFG {

	public static void main(String[] args) {
		int test;
		Scanner sc = new Scanner(System.in);
		test = sc.nextInt();
		while(test-->0) {
			int n, m;
			n = sc.nextInt();
			m = sc.nextInt();
			ArrayList arr = new ArrayList(n);		
			for(int i = 0; i<m; i++) {
				int a, b, c;
				a = sc.nextInt();
				b = sc.nextInt();
				c = sc.nextInt();
				
				for(int j = a; j<=b, j++) {
					arr[j] = arr[j] + c;
 				}
			}
			
		}
	}

}
